{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "lib": ["ES6", "DOM"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "declarationMap": true
  }
}
