{
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "extends": ["standard", "plugin:prettier/recommended", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  },
  "ignorePatterns": ["node_modules", "dist"]
}
